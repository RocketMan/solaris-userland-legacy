set name=pkg.fmri \
    value=pkg:/legacy/library/python/warlock-$(PYV)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary \
    value="Python object model built on JSON Schema and JSON Patch"
set name=pkg.description \
    value="Warlock can be used to build self-validating Python classes that conform to a JSON schema definition."
set name=com.oracle.info.description \
    value="the warlock Python module for building JSON conforming classes"
set name=com.oracle.info.tpno value=$(TPNO)
set name=info.classification \
    value=org.opensolaris.category.2008:Development/Python
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream value="Brian Waldon"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=org.opensolaris.arc-caseid value=PSARC/2013/172
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
#
file path=usr/lib/python$(PYVER)/vendor-packages/warlock-$(COMPONENT_VERSION)-py$(PYVER).egg-info/PKG-INFO
file path=usr/lib/python$(PYVER)/vendor-packages/warlock-$(COMPONENT_VERSION)-py$(PYVER).egg-info/SOURCES.txt
file path=usr/lib/python$(PYVER)/vendor-packages/warlock-$(COMPONENT_VERSION)-py$(PYVER).egg-info/dependency_links.txt
file path=usr/lib/python$(PYVER)/vendor-packages/warlock-$(COMPONENT_VERSION)-py$(PYVER).egg-info/requires.txt
file path=usr/lib/python$(PYVER)/vendor-packages/warlock-$(COMPONENT_VERSION)-py$(PYVER).egg-info/top_level.txt
file path=usr/lib/python$(PYVER)/vendor-packages/warlock/__init__.py
file path=usr/lib/python$(PYVER)/vendor-packages/warlock/core.py
file path=usr/lib/python$(PYVER)/vendor-packages/warlock/exceptions.py
file path=usr/lib/python$(PYVER)/vendor-packages/warlock/model.py
#
license warlock.license license=Apache

# force the rename with an optional dependency on the old name
depend type=optional \
    fmri=library/python-2/warlock-$(PYV)@1.0.1,5.12-5.12.0.0.0.41.0

# force the rename with an optional dependency on the old name
depend type=optional fmri=library/python/warlock-$(PYV)@1.2.0-11.5.0.0.0.56.0

# force a dependency on the Python runtime
depend type=require fmri=__TBD pkg.debug.depend.file=python$(PYVER) \
    pkg.debug.depend.path=usr/bin

# force a dependency on jsonpatch; pkgdepend work is needed to flush this out.
depend type=require fmri=legacy/library/python/jsonpatch-$(PYV)

# force a dependency on the warlock package
depend type=require \
    fmri=legacy/library/python/warlock@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)

# force a dependency on jsonschema; pkgdepend work is needed to flush this out.
depend type=require fmri=library/python/jsonschema-$(PYV)
