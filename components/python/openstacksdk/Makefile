include ../../../make-rules/shared-macros.mk

COMPONENT_NAME=		openstacksdk
COMPONENT_VERSION=	0.8.2
COMPONENT_SRC=		$(COMPONENT_NAME)-$(COMPONENT_VERSION)
COMPONENT_ARCHIVE=	$(COMPONENT_SRC).tar.gz
COMPONENT_ARCHIVE_HASH=	\
    sha256:9a5d29f0d4663d1215342d1174260be7f5fb16a6348b3b485550eb923b899696
COMPONENT_ARCHIVE_URL=	$(call pypi_url)
COMPONENT_PROJECT_URL=	http://docs.openstack.org/user-guide/sdk.html
COMPONENT_BUGDB=	python-mod/openstacksdk
COMPONENT_ANITYA_ID=	10512

TPNO=			27568

# As per PSARC/2019/093, this component will soon be removed
# Depends on oslo.utils which is not Python 3 ready.
PYTHON_VERSIONS=	$(PYTHON2_VERSIONS)

include $(WS_MAKE_RULES)/prep.mk
include $(WS_MAKE_RULES)/setup.py.mk
include $(WS_MAKE_RULES)/ips.mk

ASLR_MODE = $(ASLR_NOT_APPLICABLE)

# common targets
build:		$(BUILD_NO_ARCH)

install:	$(INSTALL_NO_ARCH)

# See $(COMPONENT_SRC)/test-requirements.txt for the Python modules
# required to execute unittests.
test:		$(NO_TESTS)
