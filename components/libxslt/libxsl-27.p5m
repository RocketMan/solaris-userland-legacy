set name=pkg.fmri \
    value=pkg:/library/python/libxsl-27@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="The XSLT library - Python 2.7 bindings"
set name=com.oracle.info.description \
    value="Python 2.7 bindings for the XSLT library"
set name=com.oracle.info.tpno value=$(TPNO)
set name=info.classification \
    value=org.opensolaris.category.2008:Development/Python
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=org.opensolaris.arc-caseid value=PSARC/2002/244
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
file path=usr/lib/python2.7/vendor-packages/64/libxsltmod.so
file path=usr/lib/python2.7/vendor-packages/libxslt.py
file path=usr/lib/python2.7/vendor-packages/libxsltmod.so
file release-notes/legacy-library-python-libxsl.txt \
    path=usr/share/doc/release-notes/legacy-library-python-libxsl.txt \
    mode=0444 must-display=true release-note=feature/pkg/self@0
license xsl.license license=SUNWlxsl-python26.copyright

# force the rename with an optional dependency on the old name
depend type=optional fmri=library/python-2/libxsl-27@1.1.28,5.12-5.12.0.0.0.41.0

# force a dependency on the Python runtime
depend type=require fmri=__TBD pkg.debug.depend.file=usr/bin/python2.7
